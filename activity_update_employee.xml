<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0F8FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Employee ID Field -->
        <EditText
            android:id="@+id/edtEmpId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Employee ID"
            android:inputType="text"
            android:layout_marginBottom="10dp" />

        <!-- Fetch Details Button -->
        <Button
            android:id="@+id/btnFetch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetch Details"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- Other EditText Fields for Employee Details -->
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtDesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Designation"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtTotalDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Days"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtSalaryPerDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Salary Per Day"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edtWorkedDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Worked Days"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtAllowances"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Allowances"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edtDeductions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deductions"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edtNetSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Net Salary"
            android:inputType="numberDecimal" />

        <!-- Horizontal LinearLayout for Calculate Salary, Update Employee, and Delete Employee buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <!-- Calculate Salary Button -->
            <Button
                android:id="@+id/btnCalculateSalary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Calculate Salary"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_marginEnd="8dp" />

            <!-- Update Employee Button -->
            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Update Employee"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Delete Employee Button -->
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Delete Employee"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

    </LinearLayout>
</ScrollView>